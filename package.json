{
  "name": "fulldry-ts",
  "devDependencies": {
    "dotenv-cli": "^7.4.2",
    "prettier": "^3.2.5",
    "turbo": "^2.0.14",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.21",
  "private": true,
  "scripts": {
    "dev": "dotenv -- turbo dev",
    "dev:api": "dotenv -- turbo run dev --filter api",
    "build": "turbo build",
    "build:libs": "turbo build --filter=nest-edgedb --filter=interface-to-class",
    "debug": "turbo dev:debug",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "core-js"
  ]
}
