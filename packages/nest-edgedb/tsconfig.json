{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "rootDir": "src",
    "strict": true,
    "outDir": "dist",
    "target": "ES2023",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
